<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">

   <LinearLayout
       android:id="@+id/linierLayout1"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical" 
       android:background="@drawable/gradientwhite">

       <EditText
           android:id="@+id/editText1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10"
           android:enabled="false"
           android:text="Pelanggan" >

       </EditText>

       <TextView
           android:id="@+id/nama_pelanggan"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:paddingBottom="1dip"
           android:textColor="#cccccc"
           android:padding="5px"
           android:textSize="16sp"
           android:textStyle="bold" />

       <EditText
           android:id="@+id/editText1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10"
           android:enabled="false"
           android:text="Alamat" >

       </EditText>
       <TextView
           android:id="@+id/alamat_pelanggan"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:paddingBottom="1dip"
           android:textColor="#cccccc"
           android:padding="5px"
           android:textSize="16sp"
           android:textStyle="bold" />
       
        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:text="Nomer PSTN" >

       </EditText>

       <TextView
           android:id="@+id/produk_pelanggan"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:paddingBottom="1dip"
           android:textColor="#cccccc"
           android:padding="5px"
           android:textSize="16sp"
           android:textStyle="bold" />
       
        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:text="Speedy" >

       </EditText>

       <TextView
           android:id="@+id/area_pelanggan"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:paddingBottom="1dip"
           android:textColor="#cccccc"
           android:padding="5px"
           android:textSize="16sp"
           android:textStyle="bold" />

       <TextView
           android:id="@+id/kode"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:textColor="#cccccc"
           android:textSize="1sp" >
       </TextView>
   </LinearLayout>

</RelativeLayout>